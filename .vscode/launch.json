    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Development Server",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/server.py",
            "args": [
                "-p",
                "8888",
                "-c",
                "./configs/development.yaml",
                "-d"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}